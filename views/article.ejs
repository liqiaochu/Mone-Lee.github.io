<%- include contentHeader %>
	</div>
  	<div class="content">
	  	<div class="newContent">
	  		<div class="wrap">
	  			<a class="articleTitle" href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
	  				<%= post.title %>
	  			</a>
	  		</div>
	  		<div class="wrap">
	  			<% if (user && (user.name == post.name)) { %>
				  <span><a class="edit" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
				  <span><a class="edit" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
				<% } %>
	  		</div>
		  	<div class="info">
		    	作者：<a href="/u/<%= post.name %>" class="writer"><%= post.name %></a> |
		    	日期：<span class="time"><%= post.time.minute %></span>
		    	<div class="tagList">
                    <% post.tags.forEach(function(tag,index){ %>
                    <% if(tag){ %>
                        <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
                    <% } %>
                    <% }) %>
                </div>
		  	</div>
		  	<div class="articleContent">
		  		<%- post.post %>
		  	</div>
		  	<p class="info">阅读：<%= post.pv %> | 评论:<%= post.comments.length %> </p>
		  	<%- include comments %>
	  	</div>
  	</div>

<%- include footer %>